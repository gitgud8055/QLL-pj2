  <script>
    $("#date-list").click(function() {
      $("#date-list ~ *").toggle();
      $("#date-list ion-icon").toggleClass("RtkAjwQi");
    });
    $("#get-list").click(function() {
      $("#get-list ~ *").toggle();
      $("#get-list ion-icon").toggleClass("RtkAjwQi");
    });
    $("#set-list").click(function() {
